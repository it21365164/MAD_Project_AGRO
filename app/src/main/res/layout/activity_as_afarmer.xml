<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#82BC85"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".As_a_Farmer" >

    <ImageView
        android:id="@+id/farmerImg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4FFFFFFF"
        android:scaleType="centerCrop"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/farmer" />

    <TextView
        android:id="@+id/farmerTxt"
        android:layout_width="@dimen/layout_width6"
        android:layout_height="@dimen/layout_height4"
        android:layout_marginStart="27dp"
        android:layout_marginTop="16dp"
        android:background="#321D271E"
        android:text="@string/farmer"
        android:textAlignment="center"
        android:textColor="#0B0A0A"
        android:textSize="70dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/farmerImg1"
        app:layout_constraintTop_toTopOf="@+id/farmerImg1" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/layout_width8"
        android:layout_height="@dimen/layout_height8"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="244dp"
        android:background="#82BC85"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/farmerImg1"
        app:layout_constraintStart_toStartOf="@+id/farmerImg1"
        app:srcCompat="@drawable/test1" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="@dimen/layout_width11"
        android:layout_height="201dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="25dp"
        android:background="#82BC85"
        app:layout_constraintBottom_toBottomOf="@+id/farmerImg1"
        app:layout_constraintEnd_toEndOf="@+id/farmerImg1"
        app:srcCompat="@drawable/test1" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="@dimen/layout_width10"
        android:layout_height="@dimen/layout_height9"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="25dp"
        android:background="#82BC85"
        app:layout_constraintBottom_toBottomOf="@+id/farmerImg1"
        app:layout_constraintStart_toStartOf="@+id/farmerImg1"
        app:srcCompat="@drawable/test1" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="@dimen/layout_width9"
        android:layout_height="@dimen/layout_height7"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="245dp"
        android:background="#82BC85"
        app:layout_constraintBottom_toBottomOf="@+id/farmerImg1"
        app:layout_constraintEnd_toEndOf="@+id/farmerImg1"
        app:srcCompat="@drawable/test1" />

    <ImageView
        android:id="@+id/farmerdetailsimg"
        android:layout_width="112dp"
        android:layout_height="109dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="311dp"
        app:layout_constraintBottom_toBottomOf="@+id/farmerImg1"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:srcCompat="@drawable/info" />

    <TextView
        android:id="@+id/farmerdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="24dp"
        android:text="@string/enterFarmerDetails"
        android:textAlignment="center"
        android:textColor="#0B0909"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView5" />

    <TextView
        android:id="@+id/orderfrtilizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="24dp"
        android:text="@string/order_fretilizer"
        android:textAlignment="center"
        android:textColor="#0B0909"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="@+id/imageView8" />

    <ImageView
        android:id="@+id/orderseedimg"
        android:layout_width="119dp"
        android:layout_height="109dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="66dp"
        android:textAlignment="center"

        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:srcCompat="@drawable/seed_bag" />

    <TextView
        android:id="@+id/orderseed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="25dp"
        android:text="@string/order_seeds"
        android:textColor="#070606"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6" />

    <ImageView
        android:id="@+id/orderfrtilizerimg"
        android:layout_width="121dp"
        android:layout_height="122dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="17dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:srcCompat="@drawable/chemical" />

    <ImageView
        android:id="@+id/sellimg"
        android:layout_width="122dp"
        android:layout_height="117dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="26dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:srcCompat="@drawable/sell" />

    <TextView
        android:id="@+id/selliteam"
        android:layout_width="97dp"
        android:layout_height="29dp"
        android:layout_marginStart="47dp"
        android:layout_marginBottom="23dp"
        android:text="@string/selling"
        android:textAlignment="center"
        android:textColor="#0E0E0E"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="74dp"
        android:layout_height="64dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="134dp"
        android:background="#F4F6F5"
        android:backgroundTint="#F7F8F9"
        android:contentDescription="@string/farmerProfile"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/farmerImg1"
        app:layout_constraintTop_toTopOf="@+id/farmerImg1"
        app:srcCompat="@drawable/profile_user" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="264dp"
        android:layout_height="37dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="152dp"
        android:text="@string/viewYourDetails"
        android:textColor="#040404"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/farmerImg1"
        app:layout_constraintTop_toTopOf="@+id/farmerImg1" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="264dp"
        android:layout_height="37dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="476dp"
        android:text="@string/giveOrder"
        android:textColor="#040404"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/farmerImg1"
        app:layout_constraintStart_toStartOf="@+id/farmerImg1" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="74dp"
        android:layout_height="63dp"
        android:layout_marginStart="27dp"

        android:layout_marginBottom="462dp"
        android:background="#FAFAF8"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/farmerImg1"
        app:layout_constraintStart_toStartOf="@+id/farmerImg1"
        app:srcCompat="@drawable/shopping_list" />

</androidx.constraintlayout.widget.ConstraintLayout>